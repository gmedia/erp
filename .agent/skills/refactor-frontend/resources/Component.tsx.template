import React from 'react';

/**
 * {{Feature}} Component
 * 
 * REFACTOR GUIDELINES:
 * - Jangan ubah data-testid yang sudah ada
 * - Jangan ubah props interface jika sudah dipakai component lain
 * - Pastikan typing lengkap (TypeScript)
 * - Extract logic ke custom hooks jika kompleks
 */

interface {{Feature}}Props {
    // Define props here
    id?: number;
    name?: string;
    onSubmit?: (data: {{Feature}}FormData) => void;
    onCancel?: () => void;
}

interface {{Feature}}FormData {
    name: string;
    // Add other form fields
}

export function {{Feature}}({ id, name, onSubmit, onCancel }: {{Feature}}Props) {
    // State management
    const [formData, setFormData] = React.useState<{{Feature}}FormData>({
        name: name ?? '',
    });

    const handleSubmit = (e: React.FormEvent) => {
        e.preventDefault();
        onSubmit?.(formData);
    };

    return (
        <form onSubmit={handleSubmit} data-testid="{{feature}}-form">
            <div>
                <label htmlFor="name">Name</label>
                <input
                    id="name"
                    type="text"
                    value={formData.name}
                    onChange={(e) => setFormData({ ...formData, name: e.target.value })}
                    data-testid="{{feature}}-name-input"
                />
            </div>
            
            <div>
                <button type="submit" data-testid="{{feature}}-submit-btn">
                    {id ? 'Update' : 'Create'}
                </button>
                {onCancel && (
                    <button type="button" onClick={onCancel} data-testid="{{feature}}-cancel-btn">
                        Cancel
                    </button>
                )}
            </div>
        </form>
    );
}
